import java.util.Scanner;
class Main {
  public static void main(String[] args) {
    Scanner entrada = new Scanner(System.in);
    float nota1;
    float nota2;
    float nota3;
    float media;
    
    System.out.println("Insira a nota de sua primeira avaliação: ");
    nota1 = entrada.nextFloat();
    
    System.out.println("Insira a nota de sua segunda avaliação: ");
    nota2 = entrada.nextFloat();
    
    System.out.println("Insira a nota de sua terceira avaliação: ");
    nota3 = entrada.nextFloat();
    
    media = (nota1 + nota2 + nota3)/3;
    if (media >= 7){
      System.out.println("Parabéns, você foi aprovado com uma média de " + media);
    }
    else {
      System.out.println("Você foi reprovado com uma média de " + media);
    }
  }
}
